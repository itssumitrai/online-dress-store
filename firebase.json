{
	"functions": {
		"source": "functions",
		"predeploy": [
            "npm install",
			"npm --prefix \"$RESOURCE_DIR\" run build",
			"npm --prefix \"$RESOURCE_DIR\" run test"
		],
		"runtime": "nodejs14"
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"predeploy": ["npm run build"],
		"rewrites": [
			{
				"source": "**",
				"function": "sveltekit"
			}
		]
	},
	"emulators": {
		"functions": {
			"port": 5002
		},
		"firestore": {
			"port": 8080
		},
		"database": {
			"port": 9000
		},
		"hosting": {
			"port": 5000
		},
		"pubsub": {
			"port": 8085
		}
	}
}
